{
  "name": "botml",
  "version": "3.0.0",
  "description": "Botml is a powerful markup language for designing modern chatbots.",
  "keywords": [
    "bot",
    "chatbot",
    "aiml",
    "chatscript",
    "buddyscript",
    "rivescript",
    "siml",
    "bot framework",
    "superscript"
  ],
  "author": "Arnaud Leymet <arnaud@codename.co>",
  "license": "MIT",
  "homepage": "https://codename.co/botml/",
  "repository": {
    "type": "git",
    "url": "https://github.com/codename-co/botml.git"
  },
  "bugs": {
    "url": "https://github.com/codename-co/botml/issues"
  },
  "files": [
    "dist",
    "docs",
    "examples",
    "lib"
  ],
  "directories": {
    "lib": "lib",
    "example": "examples"
  },
  "main": "dist/botml.js",
  "module": "lib/botml.js",
  "scripts": {
    "lint": "eslint lib test",
    "test": "mocha test/**/*.test.js",
    "preautotest": "npm i -g mocha",
    "autotest": "supervisor -q -t -n exit -x mocha -- -b",
    "precommit": "npm run lint && npm test",
    "prepush": "npm run lint && npm test",
    "build": "parcel build lib/botml.js --public-url ./ --target browser --global Botml -o botml"
  },
  "preferGlobal": true,
  "bin": {
    "bot": "lib/cli.js"
  },
  "dependencies": {
    "chalk": "^4.0.0",
    "isomorphic-unfetch": "^3.0.0",
    "machina": "^4.0.2",
    "xregexp": "^4.3.0",
    "yargs": "^15.3.1"
  },
  "devDependencies": {
    "@babel/core": "^7.10.2",
    "@babel/plugin-proposal-class-properties": "^7.10.1",
    "@babel/plugin-transform-runtime": "^7.10.1",
    "@babel/preset-env": "^7.10.2",
    "babel-eslint": "^10.1.0",
    "chai": "^4.2.0",
    "decache": "^4.6.0",
    "eslint": "^7.2.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-standard": "^4.0.1",
    "husky": "^4.2.5",
    "mocha": "^7.2.0",
    "parcel-bundler": "^1.12.4",
    "standard": "^14.3.4",
    "supervisor": "^0.12.0"
  },
  "engines": {
    "node": ">= 8"
  },
  "browser": {
    "fs": false
  },
  "runkitExampleFilename": "./examples/runkit.js"
}
